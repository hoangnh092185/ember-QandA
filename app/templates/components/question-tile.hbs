
  <div class="jumbotron row">
      {{#link-to 'question' question.id}}
    <div class="col-sm-4 content-left">
      <h4>By: {{question.name}}</h4>
      {{answer-popularity question}}
    </div>
    <div class="col-sm-8">
      <h1>{{question.title}}</h1>
    </div>
    {{/link-to}}
    {{#if question.canAddToList}}
      <h4>Question already added to the list</h4>
    {{else}}
      <button {{action 'addToList' question}}>Add question to list</button>
    {{/if}}
  </div>
