{{#if addNewQuestion}}

<h1>Question Form</h1>
<div class="">
  <form>
    <div class="form-group">
      <label for="name">Name</label>
      {{input value=name id="name" required=''}}
    </div>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title" }}
    </div>
    <div class="form-group">
      <label for="content">Content</label>
      {{textarea value=content class="form-control" rows="5" id="content"}}
    </div>
    <button {{action 'saveQuestion1'}}>Save</button>
  </form>
</div>
{{else}}
<button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
